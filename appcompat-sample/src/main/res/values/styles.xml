<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- <item name="colorControlNormal">@android:color/white</item>-->

        <!--<item name="android:background">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>-->

        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TransparentTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="WebProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?attr/web_progress_drawable</item>
    </style>


    <!--定义皮肤属性-->
    <declare-styleable name="PrettySkin">

        <attr name="status_bar_color" format="color" />

        <attr name="toolbar_bg" format="color|reference" />
        <attr name="content_bg_color" format="color" />
        <attr name="list_bg_color" format="color" />
        <attr name="item_bg_color" format="color" />

        <attr name="main_toolbar_navigation" format="reference" />
        <attr name="web_toolbar_navigation" format="reference" />

        <attr name="web_progress_drawable" format="reference" />

        <attr name="bottom_tab_color_nor" format="color" />
        <attr name="bottom_tab_color_select" format="color" />


        <attr name="swipe_refresh_progress_bg_color" format="color" />
        <attr name="swipe_refresh_color_schemes" format="reference" />


        <attr name="project_category_tab_color_nor" format="color" />
        <attr name="project_category_tab_color_select" format="color" />
        <attr name="project_image_default" format="reference" />
        <attr name="project_title_color" format="color" />
        <attr name="project_des_color" format="color" />
        <attr name="project_tag_color" format="color" />

        <attr name="project_landing_page_mask_color" format="color" />

        <attr name="explanation_text_color" format="color" />

        <attr name="shape_view_bg" format="color|reference" />
        <attr name="shape_view_shape" format="enum" />
        <attr name="shape_view_bord_color" format="color" />
        <attr name="shape_view_bord_width" format="dimension" />

        <attr name="test_dynamic_drawable" format="reference" />
        <attr name="add_drawable_color" format="color" />

        <attr name="new_text_view_bg" format="color|reference" />
        <attr name="new_text_view_text_color" format="color|reference" />
        <attr name="new_text_view_text_size" format="dimension" />

        <attr name="drawer_radio_text_color" format="color|reference" />
        <attr name="drawer_radio_left_drawable" format="reference" />

        <attr name="dialog_title_color" format="color" />
        <attr name="dialog_des_color" format="color" />

        <attr name="popup_title_color" format="color" />
        <attr name="popup_des_color" format="color" />

    </declare-styleable>


    <style name="PrettySkin_white" parent="AppTheme">

        <item name="status_bar_color">@color/status_bar_color_white_style</item>
        <item name="toolbar_bg">@color/white</item>

        <item name="content_bg_color">@color/white</item>
        <item name="list_bg_color">#F4F4F4</item>
        <item name="item_bg_color">@color/white</item>

        <item name="main_toolbar_navigation">@mipmap/main_toolbar_navigation_white_style</item>
        <item name="web_toolbar_navigation">@mipmap/web_toolbar_navigation_white_style</item>

        <item name="web_progress_drawable">@drawable/web_progress_white_style</item>

        <item name="bottom_tab_color_nor">@color/black</item>
        <item name="bottom_tab_color_select">@color/primary_red</item>

        <item name="swipe_refresh_progress_bg_color">#FFFAFAFA</item>
        <item name="swipe_refresh_color_schemes">@array/swipe_refresh_color_schemes_white_style</item>


        <item name="project_category_tab_color_nor">@color/black</item>
        <item name="project_category_tab_color_select">@color/primary_red</item>
        <item name="project_image_default">@drawable/img_default_white_style</item>
        <item name="project_title_color">@color/black</item>
        <item name="project_des_color">#767676</item>
        <item name="project_tag_color">#767676</item>
        <item name="project_landing_page_mask_color">@color/transparent</item>

        <item name="explanation_text_color">@color/black</item>

        <item name="shape_view_bg">@color/black</item>
        <item name="shape_view_shape">@integer/shape_rectangle</item>
        <item name="shape_view_bord_color">@color/primary_red</item>
        <item name="shape_view_bord_width">10dp</item>

        <item name="test_dynamic_drawable">@drawable/test_dynamic_drawable_white_style</item>
        <item name="add_drawable_color">@color/primary_red</item>

        <item name="new_text_view_bg">@color/primary_red</item>
        <item name="new_text_view_text_color">@color/white</item>
        <item name="new_text_view_text_size">16sp</item>

        <item name="drawer_radio_text_color">@color/black</item>
        <item name="drawer_radio_left_drawable">@drawable/radio_button_drawable_white_style</item>

    </style>

    <style name="PrettySkin_black" parent="AppTheme">

        <item name="status_bar_color">@color/status_bar_color_white_style</item>
        <item name="toolbar_bg">#373737</item>
        <item name="content_bg_color">#373737</item>
        <item name="list_bg_color">#2B2B2B</item>
        <item name="item_bg_color">#373737</item>


        <item name="main_toolbar_navigation">@mipmap/main_toolbar_navigation_white_style</item>
        <item name="web_toolbar_navigation">@mipmap/web_toolbar_navigation_white_style</item>

        <item name="web_progress_drawable">@drawable/web_progress_white_style</item>

        <item name="bottom_tab_color_nor">#D1D7DE</item>
        <item name="bottom_tab_color_select">#FF4D5AAF</item>

        <item name="project_category_tab_color_nor">#D1D7DE</item>
        <item name="project_category_tab_color_select">#FF4D5AAF</item>
        <item name="project_title_color">#8F8F8F</item>
        <item name="project_des_color">#8F8F8F</item>
        <item name="project_tag_color">#6E6E6E</item>
        <item name="project_landing_page_mask_color">#22555555</item>

        <item name="explanation_text_color">#8F8F8F</item>

        <item name="shape_view_bg">@color/white</item>
        <item name="shape_view_shape">@integer/shape_ring</item>
        <item name="shape_view_bord_color">@android:color/holo_orange_dark</item>
        <item name="shape_view_bord_width">20dp</item>

        <item name="test_dynamic_drawable">@drawable/test_dynamic_drawable_black_style</item>
        <item name="add_drawable_color">#FF4D5AAF</item>

        <item name="new_text_view_bg">#FF4D5AAF</item>
        <item name="new_text_view_text_color">@color/black</item>
        <item name="new_text_view_text_size">12sp</item>

        <item name="drawer_radio_text_color">@color/white</item>
        <item name="drawer_radio_left_drawable">@drawable/radio_button_drawable_black_style</item>

    </style>

</resources>