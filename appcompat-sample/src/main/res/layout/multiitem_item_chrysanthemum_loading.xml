<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/multiitem_chrysabthemum_loading_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ProgressBar
            android:id="@+id/multiitem_chrysabthemum_loading_progressBar"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/multiitem_item_chrysanthemum_loading_progress"
            android:indeterminateOnly="true"/>


        <TextView
            android:id="@+id/multiitem_chrysabthemum_loading_tv_prompt_wording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="加载中..."
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/multiitem_chrysabthemum_loading_retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="重试"
            android:textSize="11sp"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/multiitem_chrysabthemum_loading_left_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/multiitem_chrysabthemum_loading_content"
        android:visibility="gone"/>


    <View
        android:id="@+id/multiitem_chrysabthemum_loading_right_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/multiitem_chrysabthemum_loading_content"
        android:visibility="gone"/>

</RelativeLayout>
