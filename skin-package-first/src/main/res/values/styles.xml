<resources>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="red">#FF0000</color>
    <color name="transparent">#00000000</color>

    <integer name="shape_rectangle">0</integer>
    <integer name="shape_ring">1</integer>
    <integer name="shape_triangle">2</integer>


    <declare-styleable name="PrettySkin">

        <attr name="status_bar_color" format="color" />

        <attr name="toolbar_bg" format="color|reference" />
        <attr name="toolbar_title_color" format="color|reference" />

        <attr name="tablayout_bg" format="color|reference" />

        <attr name="content_bg_color" format="color" />
        <attr name="list_bg_color" format="color" />
        <attr name="item_bg_color" format="color" />

        <attr name="main_toolbar_navigation" format="reference" />
        <attr name="web_toolbar_navigation" format="reference" />

        <attr name="web_progress_drawable" format="reference" />

        <attr name="tabhost_indicator_text_color" format="color|reference" />
        <attr name="tabhost_decoration_color" format="color" />

        <attr name="swipe_refresh_progress_bg_color" format="color" />
        <attr name="swipe_refresh_color_scheme" format="color|reference" />


        <attr name="project_category_tab_color_nor" format="color" />
        <attr name="project_category_tab_color_select" format="color" />
        <attr name="project_image_default" format="reference" />
        <attr name="project_title_color" format="color" />
        <attr name="project_des_color" format="color" />
        <attr name="project_tag_color" format="color" />

        <attr name="project_landing_page_mask_color" format="color" />

        <attr name="explanation_text_color" format="color" />

        <attr name="shape_view_bg" format="color|reference" />
        <attr name="shape_view_shape" format="enum" />
        <attr name="shape_view_bord_color" format="color" />
        <attr name="shape_view_bord_width" format="dimension" />

        <attr name="test_dynamic_drawable" format="reference" />
        <attr name="add_drawable_color" format="color" />

        <attr name="new_text_view_bg" format="color|reference" />
        <attr name="new_text_view_text_color" format="color|reference" />
        <attr name="new_text_view_text_size" format="dimension" />

        <attr name="drawer_radio_text_color" format="color|reference" />
        <attr name="drawer_radio_left_drawable" format="reference" />

        <attr name="dialog_bg" format="color|reference" />
        <attr name="dialog_title_color" format="color|reference" />
        <attr name="dialog_btn_bg" format="color|reference" />
        <attr name="dialog_btn_text_color" format="color|reference" />

        <attr name="popup_bg" format="color|reference" />
        <attr name="popup_title_color" format="color|reference" />
        <attr name="popup_btn_bg" format="color|reference" />
        <attr name="popup_btn_text_color" format="color|reference" />

    </declare-styleable>

    <string-array name="skin_list">
        <item>PrettySkin_purple</item>
        <item>PrettySkin_orange</item>
    </string-array>

    <style name="PrettySkin_purple">

        <item name="status_bar_color">#500BC1</item>
        <item name="toolbar_bg">#500BC1</item>
        <item name="toolbar_title_color">#B19BEA</item>

        <item name="tablayout_bg">@drawable/tablayout_bg_purple_style</item>

        <item name="content_bg_color">#500BC1</item>
        <item name="list_bg_color">#5E1EC6</item>
        <item name="item_bg_color">#500BC1</item>

        <item name="main_toolbar_navigation">@mipmap/main_toolbar_navigation_purple_style</item>
        <item name="web_toolbar_navigation">@mipmap/web_toolbar_navigation_purple_style</item>

        <item name="web_progress_drawable">@drawable/web_progress_purple_style</item>

        <item name="tabhost_indicator_text_color">@color/bottom_tab_text_color_purple_style</item>
        <item name="tabhost_decoration_color">#6528C9</item>

        <item name="swipe_refresh_progress_bg_color">#FFFAFAFA</item>
        <item name="swipe_refresh_color_scheme">#FF3CCF</item>


        <item name="project_category_tab_color_nor">#8454D3</item>
        <item name="project_category_tab_color_select">#FF3CCF</item>
        <item name="project_image_default">@drawable/img_default_purple_style</item>
        <item name="project_title_color">@color/white</item>
        <item name="project_des_color">#A783DF</item>
        <item name="project_tag_color">#A783DF</item>
        <item name="project_landing_page_mask_color">#33000000</item>

        <item name="explanation_text_color">@color/white</item>

        <item name="shape_view_bg">?attr/list_bg_color</item>
        <item name="shape_view_shape">@integer/shape_triangle</item>
        <item name="shape_view_bord_color">#FF3CCF</item>
        <item name="shape_view_bord_width">10dp</item>

        <item name="test_dynamic_drawable">@drawable/test_dynamic_drawable_purple_style</item>
        <item name="add_drawable_color">#FF3CCF</item>

        <item name="new_text_view_bg">#FF3CCF</item>
        <item name="new_text_view_text_color">@color/white</item>
        <item name="new_text_view_text_size">18sp</item>

        <item name="drawer_radio_text_color">@color/white</item>
        <item name="drawer_radio_left_drawable">@drawable/radio_button_drawable_purple_style</item>

        <item name="dialog_bg">?attr/content_bg_color</item>
        <item name="dialog_title_color">?attr/project_title_color</item>
        <item name="dialog_btn_bg">#FF3CCF</item>
        <item name="dialog_btn_text_color">@color/white</item>

        <item name="popup_bg">?attr/dialog_bg</item>
        <item name="popup_title_color">?attr/dialog_title_color</item>
        <item name="popup_btn_bg">?attr/dialog_btn_bg</item>
        <item name="popup_btn_text_color">?attr/dialog_btn_text_color</item>

    </style>

    <style name="PrettySkin_orange">

        <item name="status_bar_color">#FF7C61</item>
        <item name="toolbar_bg">#FF7C61</item>
        <item name="toolbar_title_color">#7F3E30</item>

        <item name="tablayout_bg">@drawable/tablayout_bg_orange_style</item>

        <item name="content_bg_color">#FF7C61</item>
        <item name="list_bg_color">#EB7158</item>
        <item name="item_bg_color">#FF7C61</item>

        <item name="main_toolbar_navigation">@mipmap/main_toolbar_navigation_orange_style</item>
        <item name="web_toolbar_navigation">@mipmap/web_toolbar_navigation_orange_style</item>

        <item name="web_progress_drawable">@drawable/web_progress_orange_style</item>

        <item name="tabhost_indicator_text_color">@color/bottom_tab_text_color_orange_style</item>
        <item name="tabhost_decoration_color">#E56D55</item>

        <item name="swipe_refresh_progress_bg_color">#FFFAFAFA</item>
        <item name="swipe_refresh_color_scheme">#FF7C61</item>


        <item name="project_category_tab_color_nor">#5A1E1C</item>
        <item name="project_category_tab_color_select">#FFF799</item>
        <item name="project_image_default">@drawable/img_default_orange_style</item>
        <item name="project_title_color">#5A1E1C</item>
        <item name="project_des_color">#AC4D3E</item>
        <item name="project_tag_color">#AC4D3E</item>
        <item name="project_landing_page_mask_color">@color/transparent</item>

        <item name="explanation_text_color">#5A1E1C</item>

        <item name="shape_view_bg">?attr/list_bg_color</item>
        <item name="shape_view_shape">@integer/shape_rectangle</item>
        <item name="shape_view_bord_color">#FFF799</item>
        <item name="shape_view_bord_width">10dp</item>

        <item name="test_dynamic_drawable">@drawable/test_dynamic_drawable_orange_style</item>
        <item name="add_drawable_color">#FFF799</item>

        <item name="new_text_view_bg">#FFF799</item>
        <item name="new_text_view_text_color">@color/black</item>
        <item name="new_text_view_text_size">18sp</item>

        <item name="drawer_radio_text_color">#5A1E1C</item>
        <item name="drawer_radio_left_drawable">@drawable/radio_button_drawable_orange_style</item>

        <item name="dialog_bg">?attr/content_bg_color</item>
        <item name="dialog_title_color">?attr/project_title_color</item>
        <item name="dialog_btn_bg">#FFF799</item>
        <item name="dialog_btn_text_color">@color/black</item>

        <item name="popup_bg">?attr/dialog_bg</item>
        <item name="popup_title_color">?attr/dialog_title_color</item>
        <item name="popup_btn_bg">?attr/dialog_btn_bg</item>
        <item name="popup_btn_text_color">?attr/dialog_btn_text_color</item>

    </style>

</resources>