<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    skin:skin_attrs="background=ma_bg"
    tools:ignore="MissingPrefix">


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingHorizontal="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingVertical="0dp"
        android:alpha="1.0"
        android:focusedByDefault="true"

        android:scrollX="0dp"
        android:scrollY="0dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="changeSkin"
        android:text="换肤"
        android:textColor="#000000"
        skin:skin_attrs="background=ma_btn_bg|textColor=ma_btn_text_color"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="recoverSkin"
        android:text="恢复"
        android:textColor="#000000"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startSecondAct"
        android:text="startSecondAct"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        skin:skin_attrs="background=ma_iv_bg|src=ma_iv_src"/>

</LinearLayout>
