<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TransparentTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <declare-styleable name="PrettySkin">

        <attr name="ma_bg" format="color|reference"/>
        <attr name="ma_btn_bg" format="color|reference"/>
        <attr name="ma_btn_text_color" format="color"/>
        <attr name="ma_iv_bg" format="color|reference"/>
        <attr name="ma_iv_src" format="reference"/>

        <attr name="sc_bg" format="color|reference"/>
        <attr name="sc_btn_bg" format="color|reference"/>
        <attr name="sc_btn_text_color" format="color"/>
    </declare-styleable>


    <style name="PrettySkin_1">
        <item name="ma_bg">#FF00FF</item>
        <item name="ma_btn_bg">#00FFFF</item>
        <item name="ma_btn_text_color">#FF0000</item>
        <item name="ma_iv_bg">#0000FF</item>
        <item name="ma_iv_src">@mipmap/icon1</item>

        <item name="sc_bg">#1155AA</item>
        <item name="sc_btn_bg">@color/sc_btn_background_color</item>
        <item name="sc_btn_text_color">@color/sc_btn_text_color</item>
    </style>

    <style name="custom_style">

    </style>


</resources>
