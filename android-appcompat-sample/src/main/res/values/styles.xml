<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TransparentTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <declare-styleable name="PrettySkin">

        <attr name="ma_bg" format="color|reference"/>
        <attr name="ma_btn_bg" format="color|reference"/>
        <attr name="ma_btn_text_color" format="color"/>
        <attr name="ma_iv_bg" format="color|reference"/>
        <attr name="ma_iv_src" format="reference"/>

        <attr name="tv_bg" format="color|reference"/>
        <attr name="tv_color" format="color|reference"/>
        <attr name="tv_appearance" format="reference"/>

        <attr name="view_bg1" format="color|reference"/>
        <attr name="view_bg2" format="color|reference"/>

        <attr name="sc_bg" format="color|reference"/>
        <attr name="sc_btn_bg" format="color|reference"/>
        <attr name="sc_btn_text_color" format="color"/>
    </declare-styleable>


    <style name="PrettySkin_1">
        <item name="ma_bg">#FF00FF</item>
        <item name="ma_btn_bg">#00FFFF</item>
        <item name="ma_btn_text_color">#FF0000</item>
        <item name="ma_iv_bg">#0000FF</item>
        <item name="ma_iv_src">@mipmap/icon1</item>

        <item name="tv_bg">#FF00FF</item>
        <item name="tv_color">#FF0000</item>
        <item name="tv_appearance">@style/TextView_textAppearance</item>

        <item name="view_bg1">#FFFF00</item>
        <item name="view_bg2">#00FFFF</item>

        <item name="sc_bg">#1155AA</item>
        <item name="sc_btn_bg">@color/sc_btn_background_color</item>
        <item name="sc_btn_text_color">@color/sc_btn_text_color</item>
    </style>

    <style name="custom_style">

    </style>


    <dimen name="test_dimen_1">12px</dimen>
    <dimen name="test_dimen_2">12dp</dimen>
    <dimen name="test_dimen_3">12sp</dimen>

    <integer name="test_integer_1">12</integer>

    <fraction name="test_fraction_1">12</fraction>

    <fraction name="test_fraction_2">12.0</fraction>

    <bool name="test_bool_1">true</bool>

    <style name="TextView_textAppearance">
        <item name="android:textColor">#FF00FF</item>
    </style>

</resources>
